<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>

<%= form_with model: @new_book, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <label>Body</label><br>
  <%= f.text_area :body %><br>

  <%= f.submit "Create Book" %>
<% end %>
