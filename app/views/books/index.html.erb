<h1>Books#index</h1>

<%= @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <%= link_to "Show", book_path(book.id) %>
  <%= link_to "Edit", edit_book_path(book.id) %>
  <%= link_to "Destroy" %>
<% end %>

<%= form_with model: @book do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <label>Body</label><br>
  <%= f.text_area :body %><br>

  <%= f.submit "Create Book" %>
<% end %>
